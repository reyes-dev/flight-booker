<%= form_with model: @booking do |f| %>
<p>Flight Information: </p>
  <%= @selected_flight.departure_date %>
  <%= @departure_airport.airport_code %>
  <%= @arrival_airport.airport_code %>
  <%= @selected_flight.id %>
  
  <p>Please fill out information: </p>
    <%= f.fields_for :passengers do |passenger_form| %>
      <%= passenger_form.label :name %>
      <%= passenger_form.text_field :name %>

      <%= passenger_form.label :email %>
      <%= passenger_form.email_field :email %><br />
  <% end %>

  <%= f.submit "Book Flight" %>
<% end %>