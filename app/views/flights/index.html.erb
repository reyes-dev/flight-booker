<%= form_with(url: "/flights", method: "get") do |f| %>
  <%= f.select :departure_airport_id, options_for_select(@airport_options) %>
  <%= f.select :arrival_airport_id, options_for_select(@airport_options) %>
  <%= f.select :amount_of_passengers, options_for_select(@passenger_options) %>
  <%= f.date_select :departure_date, order: [:day, :month, :year], start_year: Time.now.year + 2, end_year: Time.now.year %>
  <%= submit_tag("Search") %>
<% end %>